		try {
			num = Integer.parseInt(JOptionPane.showInputDialog(null, "Insertar un número"));
			if (num == 0) {
				throw new numero0();
				
			}else {
				
			}

		} catch (numero0 e) {
			JOptionPane.showMessageDialog(null, "Error. El 0 no es un número natural.");
		} catch (Exception e) {
